<p>
  <strong>First name:</strong>
  <%=@friend.first_name%>
</p>
<p>
<strong>Last name:</strong>
  <%=@friend.last_name%>
</p>
<p>
<strong>Email:</strong>
  <%=@friend.email%>
</p>
<p>
<strong>Phone:</strong>
  <%=@friend.phone%>
</p>
<p>
<strong>Twitter:</strong>
  <%=@friend.twitter%>
</p>

<div class="d-inline-flex gap-2">
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= button_to 'Delete', @friend, method: :delete, data: { method: :delete, confirm: "Are you sure?" }, class: "btn btn-danger" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
</div>
